<div class="stack-items">
    <template webc:for="item of collection" webc:nokeep>
        <article
            webc:is="stack-item"
            :item="item"
            :date="item.page.date"
            :url="item.page.url"
            :title="item.data.title || ''"
            :abstract="item.data.abstract"
        ></article>
        <!--- <object-inspector label="item.page" :obj="item.page"></object-inspector> -->
    </template>
</div>

